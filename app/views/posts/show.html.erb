<div class="row justify-content-center">
  <div class="col-xs-10 col-sm-10 col-md-8 col-lg-6">
    <%=image_tag @post.img_path, style:'width:100%; height:auto;' %>
    <div class="card">
      <div class="card-body">
        <h4 class="card_body"> <%= @post.title %></h4>
        <p class="card-text"><%= @post.content %></p>
        <p class="card-text"><small class="text-muted">
          <%= "#{time_ago_in_words(@post.created_at)} ì „" %></small>
        </p>
      </div>
    </div>
  </div>
</div>