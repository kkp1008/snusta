<table class="comment-table" id="comments-<%= post.id %>">
  <tbody>
     <% post.comments.each do |comment| %>
      <tr>
        <td class="commenter" style="padding-left: 20px;"><%=comment.user.name%></td>
        <td class="comment" style="padding-left: 10px;"><%=comment.contents%></td>
      </tr>
  <% end %>
  </tbody>
</table>
