
<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="margin-top:10%">
  <div class="card">
    <div class="card-title">
      <span> <%= image_tag post.user.valid_profile_img, class: 'img rounded-circle', style: 'width:20px; height:auto' %></span>
      <span><%= post.user.name %></span>
    </div>
  </div>
</div>


<div class="row justify-content-center">
  <div class="col-xs-10 col-sm-10 col-md-8 col-lg-6">
    <div class="card">
      <div class="card-body">
        <%= image_tag post.img_path,
                      class: 'card-img-top',
                      style: 'width:100%; height:auto;' %>
        <div class="card-text" >
          <%= render partial: 'like.html.erb',locals:{post: post} %>
        </div>
        <h4 class="card_body"><%= post.title %></h4>
        <p class="card-text" ><%= post.content %></p>
        <p class="card-text" >
          <small class="text-muted">
            <%= "#{time_ago_in_words(post.created_at)} 전" %></small>
        </p>
      </div>
        <%= render partial: 'comment.html.erb', locals:{post: post} %>
      <hr>
      <%= form_tag comment_post_path(post), method: :post, class: 'comment-box', remote: true do %>

        <%= text_field_tag :comment, nil, clss: 'form-control', id: "comment-#{post.id}", placeholder: '댓글쓰기..'%>
      <% end %>
    </div>
  </div>
</div>